<div class="catalog_card">
    <div class="catalog_card__image">
        {% if not ez_field_is_empty( content, 'image' ) %}
            {{ ez_render_field(content, 'image', {
                parameters: {
                    alias: 'catalog_card',
                    class: 'img-fluid'
                }
            }) }}
        {% endif %}
    </div>
    <div class="catalog_card__link">
        <a href="{{ path(location) }}">{{ ez_content_name(content) }}</a>
    </div>
</div>
