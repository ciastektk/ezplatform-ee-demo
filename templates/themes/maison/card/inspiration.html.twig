{% trans_default_domain 'maison' %}

<div class="card">
    <a href="{{ ez_path(location) }}" class="card__link">
        <div class="card__image img-fluid-container">
            {{ ez_render_field(content, 'teaser_image') }}
        </div>
        <div class="card__text card__text--overlap box-shadow">
            <div class="card__title">
                <h3 class="card__heading heading-sm">{{ ez_render_field(content, 'title') }}</h3>
            </div>
            <div class="card__desc">
                {{ ez_render_field(content, 'teaser_text') }}
            </div>
        </div>
    </a>
</div>
